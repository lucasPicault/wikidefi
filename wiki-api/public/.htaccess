# Activer la réécriture des URLs
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Si la requête est un fichier ou un dossier existant, la servir directement
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Sinon, rediriger toutes les autres requêtes vers index.php
    RewriteRule ^ index.php [L]
</IfModule>

# Désactiver l'affichage des répertoires
Options -Indexes

# Ajouter la prise en charge de UTF-8
AddDefaultCharset UTF-8
